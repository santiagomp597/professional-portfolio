---
interface Props {
  title: string;
  company: string;
  companyDescription: string;
  description: string;
  imageUrl: string;
  imageAlt: string;
  date: string;
}

const {
  title,
  company,
  companyDescription,
  description,
  imageUrl,
  imageAlt,
  date,
} = Astro.props;
---

<div
  class="relative mx-12 pb-14 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
>
  <div class="relative pb-6 md:col-span-2">
    <div class="sticky top-0">
      <span
        class="text-blue-500 dark:text-green-400 -left-[42px] absolute rounded-full text-5xl"
        >&bull;
      </span>
      <h3 class="text-2xl font-bold text-blue-500 dark:text-green-400">
        {title}
      </h3>
      <h4 class="font-semibold text-xl text-gray-600 dark:text-white">
        {company}
      </h4>
      <h5 class="font-normal italic text-gray-600 dark:text-white">
        {companyDescription}
      </h5>
      <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80"
        >{date}</time
      >
    </div>
  </div>
  <div
    class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3"
  >
    {description}
    <div class="pt-5 shadow-2xl">
      <img
        class="w-full h-80 object-cover object-top rounded-lg"
        src={imageUrl}
        alt={imageAlt}
      />
    </div>
  </div>
</div>
