---
import AngularIcon from "./icons/Angular.astro";
import TypescriptIcon from "./icons/Typescript.astro";
import JavascriptIcon from "./icons/Javascript.astro";
import ReactIcon from "./icons/React.astro";
import GitIcon from "./icons/Git.astro";
import CssIcon from "./icons/Css.astro";
import PixelCard from "./PixelCard.astro";
import MongoDBIcon from "./icons/MongoDB.astro";
import NodeJSIcon from "./icons/NodeJS.astro";

const techItems = [
  {
    cardClass: "lg:col-span-2 lg:row-span-2",
    cardColors: "#89023e,#f7b733",
    icon: ReactIcon,
  },
  {
    cardClass: "lg:row-span-2",
    cardColors: "#12898F,#119D4F",
    icon: AngularIcon,
  },
  {
    cardClass: "col-span-2",
    cardColors: "#0E095D,#2C72D3",
    icon: JavascriptIcon,
  },
  {
    cardClass: "col-span-2",
    cardColors: "#CB34B2,#5D0442",
    icon: NodeJSIcon,
  },
  {
    cardClass: "",
    cardColors: "#0E095D,#2C72D3",
    icon: GitIcon,
  },
  {
    cardClass: "lg:col-span-2",
    cardColors: "#f7b733,#89023e",
    icon: TypescriptIcon,
  },
  {
    cardClass: "",
    cardColors: "#0E095D,#2C72D3",
    icon: MongoDBIcon,
  },
  {
    cardClass: "",
    cardColors: "#12898F,#119D4F",
    icon: CssIcon,
  },
];
---

<div class="flex flex-col gap-y-16">
  <article
    class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0"
  >
    <div class="w-full">
      <div class="grid grid-cols-2 lg:grid-cols-5 gap-3">
        {
          techItems.map((item: any) => (
            <PixelCard class={item.cardClass} dataColors={item.cardColors}>
              <item.icon class="w-20 h-20" />
            </PixelCard>
          ))
        }
      </div>
    </div>
  </article>
</div>
